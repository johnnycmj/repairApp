<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <LinearLayout
            android:id="@+id/office_material_applying_operation_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="320" >

            <Button
                android:id="@+id/office_material_applying_number_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/seekbar_minus_selection" />

            <TextView
                android:id="@+id/office_material_applying_number"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:singleLine="true"
                android:text="@string/text_materail_number_default"
                android:textColor="#666666"
                android:textSize="15sp" />

            <Button
                android:id="@+id/office_material_applying_number_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/seekbar_plus_selection" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/office_material_applying_operation_area"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/office_material_applying_delete"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="6dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_office_material_delte"
                android:text="@string/label_material_delete" />

            <TextView
                android:id="@+id/office_material_applying_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="false"
                android:textColor="#666666"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>