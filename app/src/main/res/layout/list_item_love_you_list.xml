<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_biaobai_bg"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/love_you_item_from_name"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:ems="6"
            android:singleLine="true"
            android:textColor="#f23c62"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_biaobai_to" />

        <TextView
            android:id="@+id/love_you_item_to_name"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:ems="6"
            android:singleLine="true"
            android:textColor="#f23c62"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_biaobai_say" />
    </LinearLayout>

    <TextView
        android:id="@+id/love_you_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ellipsize="none"
        android:lineSpacingExtra="5dp"
        android:singleLine="false"
        android:textColor="#a04833"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" 
        android:layout_marginBottom="4.5dp">

        <ImageView
            android:id="@+id/just_align_time"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_common_time" />

        <TextView
            android:id="@+id/love_you_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/just_align_time"
            android:ellipsize="none"
            android:lineSpacingExtra="0dp"
            android:singleLine="true"
            android:textColor="#80844310"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/love_you_item_like_it"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/love_you_nolike_bg_selector"
            android:drawableLeft="@drawable/love_you_nolike_heart_selector"
            android:drawablePadding="8dp"
            android:ellipsize="none"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="#f23c62"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/love_you_item_unlike_it"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/love_you_liked_bg_selector"
            android:drawableLeft="@drawable/love_you_liked_heart_selector"
            android:drawablePadding="8dp"
            android:ellipsize="none"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="#f23c62"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>