<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/window_frame_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/head_titlebar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:contentDescription="@null"
            android:src="#b6babf" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="21dp"
                        android:text="@string/quiet_title_date"
                        android:textColor="#e35c49"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:contentDescription="@null"
                        android:src="#d8d8d8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/quiet_tips"
                        android:textColor="#363231"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="11.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="#e35c49" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8.5dp"
                        android:paddingTop="8.5dp" >

                        <CheckBox
                            android:id="@+id/cb_monday"
                            style="@style/widget_checkbox_weekday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quiet_monday" />

                        <CheckBox
                            android:id="@+id/cb_tuesday"
                            style="@style/widget_checkbox_weekday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quiet_tuesday" />

                        <CheckBox
                            android:id="@+id/cb_wednesday"
                            style="@style/widget_checkbox_weekday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quiet_wednesday" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8.5dp"
                        android:paddingTop="8.5dp" >

                        <CheckBox
                            android:id="@+id/cb_thursday"
                            style="@style/widget_checkbox_weekday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quiet_thursday" />

                        <CheckBox
                            android:id="@+id/cb_friday"
                            style="@style/widget_checkbox_weekday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quiet_friday" />

                        <CheckBox
                            android:id="@+id/cb_saturday"
                            style="@style/widget_checkbox_weekday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quiet_saturday" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8.5dp"
                        android:paddingTop="8.5dp" >

                        <CheckBox
                            android:id="@+id/cb_sunday"
                            style="@style/widget_checkbox_weekday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quiet_sunday" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="21dp"
                        android:text="@string/quiet_title_time"
                        android:textColor="#e35c49"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:contentDescription="@null"
                        android:src="#d8d8d8" />

                    <TextView
                        android:id="@+id/time_full_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#363231"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="#e35c49" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/start_time_show"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:text="@string/quiet_start_time"
                        android:textColor="#666666"
                        android:textIsSelectable="false"
                        android:textSize="15sp" />

                    <SeekBar
                        android:id="@+id/start_time_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:maxHeight="12dp"
                        android:minHeight="12dp"
                        android:progressDrawable="@drawable/seekbar_quiet_layer_list_bg"
                        android:thumb="@drawable/seekbar_quiet_thumb"
                        android:thumbOffset="0dp" />

                    <TextView
                        android:id="@+id/continued_time_show"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:text="@string/quiet_continued_time"
                        android:textColor="#666666"
                        android:textIsSelectable="false"
                        android:textSize="15sp" />

                    <SeekBar
                        android:id="@+id/continued_time_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:maxHeight="12dp"
                        android:minHeight="12dp"
                        android:progressDrawable="@drawable/seekbar_quiet_layer_list_bg"
                        android:thumb="@drawable/seekbar_quiet_thumb"
                        android:thumbOffset="0dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>