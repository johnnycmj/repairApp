<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp" >

    <TextView
        android:id="@+id/employment_page_emplyment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="#3d4c5c"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >

        <TextView
            style="@style/textview_workbench_employment_stat_label_and_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workbench_employment_page_stat_not_accept_label" />

        <TextView
            android:id="@+id/employment_page_emplyment_not_accept"
            style="@style/textview_workbench_employment_stat_label_and_number"
            android:layout_width="match_parent"
            android:gravity="left"
            android:drawableRight="@drawable/open_arrow"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >

        <TextView
            style="@style/textview_workbench_employment_stat_label_and_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workbench_employment_page_stat_repairing_label" />

        <TextView
            android:id="@+id/employment_page_emplyment_repairing"
            style="@style/textview_workbench_employment_stat_label_and_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/textview_workbench_employment_stat_label_and_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="99"
            android:gravity="right"
            android:text="@string/workbench_employment_page_stat_month_total_label" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/employment_page_emplyment_month_total"
            style="@style/textview_workbench_employment_stat_label_and_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>