<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_list_item_bg"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19.5dp"
        android:layout_marginTop="19.5dp" >

        <TextView
            android:id="@+id/office_material_apply_appliant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/office_material_apply_appliant_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/office_material_apply_appliant_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/character_vertical_bar"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/office_material_apply_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/office_material_apply_appliant_split"
            android:drawableLeft="@drawable/notice_icon_time"
            android:drawablePadding="8dp"
            android:ellipsize="none"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/office_material_apply_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/office_material_apply_time_value"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="@string/label_office_material_applying_label"
            android:textColor="#d37f01"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_arrow_right" />
    </RelativeLayout>

</LinearLayout>