<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:background="@drawable/info_list_item_bg"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/complaint_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_complaint_category_blue"
            android:drawablePadding="8dp"
            android:paddingBottom="12dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textIsSelectable="false"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/complaint_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/complaint_category_name"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#e35c49"
            android:textIsSelectable="false"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_complaint_peple" />

        <TextView
            android:id="@+id/complaint_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            android:src="#d8d8d8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/av_index_tab_label_modular_page_complaint_index_receive"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/complaint_receive"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/icon_complaint_receive_number"
            android:gravity="center"
            android:minHeight="16dp"
            android:minWidth="16dp"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/complaint_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/notice_icon_time"
                android:drawablePadding="8dp"
                android:ellipsize="none"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="#999999"
                android:textIsSelectable="false"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>