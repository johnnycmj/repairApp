<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="99"
        android:orientation="vertical" >

        <!-- 标题 -->

        <TextView
            android:id="@+id/home_page_progress_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="41dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- 报修状态+报修大小项+内容 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/home_page_progress_repair_status_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_home_page_status_finish"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/home_page_progress_repair_asset_and_trouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#e35c49"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_page_progress_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:src="@drawable/icon_arrow_right" />

</LinearLayout>