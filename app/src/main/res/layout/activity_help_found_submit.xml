<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 背景 -->

    <LinearLayout
        android:id="@+id/window_frame_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/labor_common_bg_bottom" />
    </LinearLayout>
    <!-- 内容 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include layout="@layout/head_titlebar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/spring_horse_grid_repair_order"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="24dp" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@null"
                        android:src="@drawable/notice_icon_time" />

                    <TextView
                        android:id="@+id/found_submit_time"
                        android:layout_width="168dp"
                        android:layout_height="31dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/select_bg_selector"
                        android:gravity="center_vertical"
                        android:hint="@string/found_submit_time_hint"
                        android:paddingLeft="8dp"
                        android:textColor="#333333"
                        android:textColorHint="#c6c6c6"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="24dp" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_repair_order_dorm" />

                    <TextView
                        android:id="@+id/found_submit_street"
                        android:layout_width="168dp"
                        android:layout_height="31dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/select_bg_selector"
                        android:gravity="center_vertical"
                        android:hint="@string/found_submit_street_hint"
                        android:paddingLeft="8dp"
                        android:textColor="#333333"
                        android:textColorHint="#c6c6c6"
                        android:textSize="15sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/found_submit_address"
                    android:layout_width="168dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="7.5dp"
                    android:background="@drawable/edittext_backgroud"
                    android:hint="@string/found_submit_address_hint"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="24dp" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_repair_order_order" />

                    <TextView
                        android:id="@+id/found_submit_type"
                        android:layout_width="168dp"
                        android:layout_height="31dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/select_bg_selector"
                        android:gravity="center_vertical"
                        android:hint="@string/found_submit_type_hint"
                        android:paddingLeft="8dp"
                        android:textColor="#333333"
                        android:textColorHint="#c6c6c6"
                        android:textSize="15sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/found_submit_contact"
                    android:layout_width="209dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="7.5dp"
                    android:background="@drawable/edittext_backgroud"
                    android:hint="@string/found_submit_contact_hint"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="48dp" >

                    <CheckBox
                        android:id="@+id/found_submit_is_public_contact"
                        style="@style/spring_horse_widget_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:paddingLeft="@dimen/not_disturb_setting_checkbox_padding_left"
                        android:text="@string/found_submit_public_contact_label"
                        android:textColor="#333333"
                        android:textColorHint="#c6c6c6"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" >

                    <include
                        layout="@layout/imageview_upload_photo"
                        android:visibility="gone" />
                </LinearLayout>

                <EditText
                    android:id="@+id/found_submit_remark"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="7.5dp"
                    android:background="@drawable/repair_order_remark_bg"
                    android:gravity="top"
                    android:hint="@string/found_submit_remark_hint"
                    android:lines="4"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#333333"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/take_photos"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="80dp"
            android:contentDescription="@null"
            android:src="@drawable/photo_take_selector" />
    </LinearLayout>

</FrameLayout>