<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/pre_list_delete"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#eeeeee"
        android:contentDescription="@null"
        android:paddingBottom="32.5dp"
        android:paddingLeft="13dp"
        android:paddingRight="9dp"
        android:paddingTop="32.5dp"
        android:src="@drawable/delete_large"
        android:text="@string/label_material_delete" />

    <ImageView
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/repair_material_left_and_right_margin_width"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/line_material_delete" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="99"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp" >

            <TextView
                android:id="@+id/material_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e35c49"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="@string/label_materail_number_last_used"
                android:textColor="#999999"
                android:textSize="20sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/last_used_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="none"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/repair_material_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="@string/label_materail_spec"
                android:textColor="#999999"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/repair_materail_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="@string/label_materail_brand"
                android:textColor="#999999"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/repair_materail_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="320" >

        <Button
            android:id="@+id/seekbar_minus"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="@dimen/repair_material_minus_and_plus_margin_width"
            android:background="@drawable/seekbar_minus_selection" />

        <TextView
            android:id="@+id/increment_used_number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:gravity="center"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:singleLine="true"
            android:text="@string/text_materail_number_default"
            android:textColor="#666666"
            android:textSize="20sp" />

        <Button
            android:id="@+id/seekbar_plus"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="@dimen/repair_material_minus_and_plus_margin_width"
            android:layout_marginRight="@dimen/repair_material_left_and_right_margin_width"
            android:background="@drawable/seekbar_plus_selection" />
    </LinearLayout>

</LinearLayout>