<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/empty_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:drawableTop="@drawable/empty_icon_repair_order"
        android:text="@string/label_empty_workbench_material_zero_tip"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/empty_click_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="20dp"
        android:text="@string/label_empty_repair_order_collection_click_to_refresh"
        android:textColor="#999999"
        android:textSize="14sp" />

</LinearLayout>