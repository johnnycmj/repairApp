<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/filter_repair_all"
            style="@style/textview_page_repair_filters"
            android:drawableTop="@drawable/filter_icon_all_selector"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/av_index_tab_label_modular_page_repair_filter_all" />

        <TextView
            android:id="@+id/filter_repair_dorm"
            style="@style/textview_page_repair_filters"
            android:drawableTop="@drawable/filter_icon_dorm_selector"
            android:gravity="center"
            android:text="@string/av_index_tab_label_modular_page_repair_filter_dorm" />

        <TextView
            android:id="@+id/filter_repair_inner"
            style="@style/textview_page_repair_filters"
            android:drawableTop="@drawable/filter_icon_inner_selector"
            android:gravity="center"
            android:text="@string/av_index_tab_label_modular_page_repair_filter_inner" />

        <TextView
            android:id="@+id/filter_repair_outter"
            style="@style/textview_page_repair_filters"
            android:drawableTop="@drawable/filter_icon_outter_selector"
            android:gravity="center"
            android:text="@string/av_index_tab_label_modular_page_repair_filter_outter" />
    </LinearLayout>

</LinearLayout>