<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@drawable/more_background"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical" >


    <Button
        android:id="@+id/fix_info_start_to_deal"
        style="@style/more_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/label_fix_info_start_to_deal"
        android:visibility="gone" />

    <Button
        android:id="@+id/fix_info_refix_complete"
        style="@style/more_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/label_fix_info_refix_complete"
        android:visibility="gone" />

    <Button
        android:id="@+id/fix_info_complete"
        style="@style/more_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/label_fix_info_complete"
        android:visibility="gone" />
    

</LinearLayout>