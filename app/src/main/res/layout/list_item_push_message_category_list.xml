<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/push_msg_category_img"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/push_msg_category_new"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@null"
                android:src="@drawable/msg_new" />

            <TextView
                android:id="@+id/push_msg_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:textColor="#844310"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/push_msg_category_last_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ba8e60"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>