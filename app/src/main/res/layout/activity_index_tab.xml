<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/head_titlebar" />

    <com.wutong.common.widget.UnableScrollViewPager
        android:id="@+id/viewpager_modular"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="98" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="@drawable/tab_switcher_layout_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/switcher_index_repair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/modular_switcher_repair_selector"
            android:enabled="false"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/av_index_tab_label_modular_switcher_repair"
            android:textColor="@color/modular_switcher_text_color_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/switcher_index_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/modular_switcher_notice_selector"
            android:enabled="true"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/av_index_tab_label_modular_switcher_notice"
            android:textColor="@color/modular_switcher_text_color_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/switcher_index_complaint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/modular_switcher_complaint_selector"
            android:enabled="true"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/av_index_tab_label_modular_switcher_complaint"
            android:textColor="@color/modular_switcher_text_color_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/switcher_index_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/modular_switcher_more_selector"
            android:enabled="true"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/av_index_tab_label_modular_switcher_more"
            android:textColor="@color/modular_switcher_text_color_selector"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>