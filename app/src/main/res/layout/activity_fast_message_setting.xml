<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/window_frame_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/common_bg"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/head_titlebar" />

        <include 
            android:id="@+id/fast_message_empty"
            layout="@layout/empty_fast_message" />

        <ListView
            android:listSelector="@drawable/common_list_selector"
            android:id="@+id/fast_message_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:background="@drawable/info_list_item_bg"
            android:divider="@drawable/common_list__padding_divider" />
    </LinearLayout>

</FrameLayout>