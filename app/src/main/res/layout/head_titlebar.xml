<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/head_titlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@drawable/title_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/titlebar_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:src="@drawable/titlebar_icon_back_selector"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/titlebar_filter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:src="@drawable/titlebar_icon_filter_selector"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/titlebar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/titlebar_more"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:src="@drawable/titlebar_icon_more_selector"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/titlebar_sort"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="13dp"
                android:contentDescription="@null"
                android:src="@drawable/titlebar_icon_back_selector"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/titlebar_add"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:src="@drawable/titlebar_icon_add_selector"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/titlebar_submit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:src="@drawable/titlebar_icon_submit_selector"
                android:visibility="gone" />
            
            <ImageView
                android:id="@+id/titlebar_right_line"
                android:layout_width="1dp"
                android:layout_height="31dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:src="@drawable/common_titlebar_right_line"
                android:visibility="gone" />
            
           

            <TextView
                android:id="@+id/titlebar_tips"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:visibility="gone" />
            
            
            <ImageView
                android:id="@+id/titlebar_push_msg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_push_msg_normal_layer"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <include
        layout="@layout/head_ad"
        android:visibility="gone" />

</LinearLayout>