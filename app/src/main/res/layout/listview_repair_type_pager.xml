<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:onClick="childOnClick"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <!-- 要求引用该布局的activity实现 public void childOnClick(View v)方法 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="300"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/repair_order_pager_address"
            style="@style/textview_repair_order_pager_address"
            android:layout_width="100dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/repair_order_pager_time"
            style="@style/textview_repair_order_pager_time"
            android:layout_width="0dp"
            android:layout_weight="200"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="300"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/repair_order_pager_asset_name"
            style="@style/textview_repair_order_pager_asset"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/repair_order_pager_name"
            style="@style/textview_repair_order_pager_trouble"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/repair_order_pager_status"
            style="@style/textview_repair_order_pager_status"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right" />
    </LinearLayout>

</LinearLayout>