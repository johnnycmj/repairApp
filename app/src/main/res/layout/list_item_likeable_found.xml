<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="26dp"
        android:layout_height="match_parent" 
        android:layout_marginLeft="2dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="#d8d8d8" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@null"
            android:src="@drawable/likeable_found_time_point" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/likeable_found_item_time"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#dbb995"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/likeable_found_item_cover"
                android:layout_width="90dp"
                android:layout_height="69dp"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/likeable_found_item_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="6dp"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:textColor="#844310"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/likeable_found_item_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:singleLine="false"
                    android:textColor="#ba8e60"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="#d8d8d8" />
    </LinearLayout>

</LinearLayout>