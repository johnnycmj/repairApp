<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_list_item_bg"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <TextView
        android:id="@+id/office_material_apply_appliant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_arrow_right"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#844310"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/office_material_apply_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/notice_icon_time"
            android:drawablePadding="8dp"
            android:ellipsize="none"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#d37f01"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/office_material_apply_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/office_material_apply_time_label"
            android:ellipsize="none"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#ba8e60"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/office_material_apply_stock_out_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_office_stock_out"
            android:drawablePadding="8dp"
            android:ellipsize="none"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#ba8e60"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/office_material_apply_query_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_office_query"
            android:drawablePadding="8dp"
            android:ellipsize="none"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#ba8e60"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/office_material_apply_cancel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_office_cancel"
            android:drawablePadding="8dp"
            android:ellipsize="none"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#ba8e60"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>