<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.wutong.common.widget.PullToRefreshView
        android:id="@+id/workbench_material_pull_refresh_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/workbench_employment_empty"
            layout="@layout/empty_workbench_employment" />

        <ListView
            android:listSelector="@drawable/common_list_selector"
            android:layout_margin="12dp"
            android:id="@+id/employment_page_employment_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="1dp"
            android:background="@drawable/info_list_item_bg"
            android:divider="@drawable/workbench_employment_list_divider"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />
    </com.wutong.common.widget.PullToRefreshView>

</LinearLayout>