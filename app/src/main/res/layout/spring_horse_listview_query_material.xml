<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/query_material_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#844310"
            android:textIsSelectable="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/query_material_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/hint_query_materials_empty_number"
            android:paddingLeft="8dp"
            android:textColor="#ba8e60"
            android:textIsSelectable="true"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/query_material_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="@string/hint_query_materials_empty_brand"
            android:textColor="#ba8e60"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/query_material_spec"
            style="@style/textview_query_material_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/hint_query_materials_empty_spec"
            android:textColor="#ba8e60"
            android:textIsSelectable="true"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>