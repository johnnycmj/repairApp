<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/titlebar_background"
    android:gravity="center_vertical"
    android:paddingRight="14dp" >

    <ImageButton
        android:id="@+id/titlebar_back"
        android:layout_width="42dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/titlebar_back"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/titlebar_setting"
        android:layout_width="42dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/titlebar_setting"
        android:contentDescription="@null"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="right" >

        <ProgressBar
            android:id="@+id/titlebar_loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="8dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/titlebar_refresh"
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:background="@drawable/titlebar_update"
            android:contentDescription="@null"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/titlebar_more"
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:background="@drawable/titlebar_add"
            android:contentDescription="@null"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>